package com.apicloud.navigator.ui.actions;

import org.eclipse.jface.action.IAction;
import org.eclipse.jface.viewers.ISelection;
import org.eclipse.ui.IWorkbenchWindow;
import org.eclipse.ui.IWorkbenchWindowActionDelegate;

import com.apicloud.updatemanager.core.CheckUpateManager;

public class UpdateAction implements IWorkbenchWindowActionDelegate {
	@Override
	public void run(IAction action) {
		CheckUpateManager  manager = CheckUpateManager.getInstance();
		manager.setAuto(false);
		manager.checkIDEUpdate();
	}

	@Override
	public void selectionChanged(IAction action, ISelection selection) {
	}

	@Override
	public void dispose() {
	}

	@Override
	public void init(IWorkbenchWindow window) {
	}

}
